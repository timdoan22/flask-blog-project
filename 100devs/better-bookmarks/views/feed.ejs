<%- include('partials/header') -%>
<%- include('partials/navbar') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <!-- display all the posts from the main /feed route and the getFeed method from the posts controller -->
        <% for(var i=0; i<bookmarks.length; i++) {%>
          <div class="max-w-sm bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700 pt-2">
            <a href="/bookmark/<%= bookmarks[i]._id%>">
                <img class="rounded-t-lg h-50 w-30" src="<%= bookmarks[i].image%>" alt="" />
            </a>
            <div>
              <%= bookmarks[i].likes%>
            </div>
            <div class="p-5">
                <a href="<%= bookmarks[i].link%>">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-navy-900 dark:text-white"><%= bookmarks[i].title%></h5>
                </a>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= bookmarks[i].description%></p>
                <h3>Posted by: <%= bookmarks[i].userName%></h3>
                <br>
                <a href="<%= bookmarks[i].link%>" class="inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                    Visit link
                    <svg aria-hidden="true" class="ml-2 -mr-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                </a>
            </div>
          </div>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>