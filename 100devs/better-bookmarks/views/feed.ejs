<%- include('partials/header') -%>
<%- include('partials/navbar') -%>
  <div class="container mt-10 container-feed">
    <div class="mt-5">
        <div class="col-12 feed-cards">
        <!-- display all the posts from the main /feed route and the getFeed method from the posts controller -->
        <% for(var i=0; i<bookmarks.length; i++) {%>
            <div class="col-3 mt-10 feed-cards-child">
                <div class="max-w-sm rounded overflow-hidden shadow-lg">
                <a href="/bookmark/<%= bookmarks[i]._id%>"><img class="profile-image" src="<%= bookmarks[i].image%>" alt=""></a>
                <div class="px-6 py-4">
                    <div class="button-links">
                        <div>
                            <form
                            class="col-1"
                            action="/bookmark/likeBookmark/<%= bookmarks[i]._id %>?_method=PUT"
                            method="POST"
                            >
                              <button class="btn btn-primary fa fa-heart heart-button" type="submit"></button>
                            </form>
                        </div>
                        <div>
                            <% if(bookmarks[i].likes < 1){ %>
                                <span class="likes-text"></span>
                            <% } else { %>
                                <span class="likes-text">+<%= bookmarks[i].likes%></span>
                            <% } %>
                        </div>
                    </div>
                    <div class="favourites-btn">
                        <form
                        class="col-1"
                        action="/bookmark/favouriteBookmark/<%= bookmarks[i]._id %>?_method=PUT"
                        method="POST"
                        >
                          <button class="btn btn-primary fa fa-bookmark"></button>
                        </form>
                    </div>
                    <a href="<%= bookmarks[i].link%>"><div class="font-bold text-xl mb-2 text-center"><%= bookmarks[i].title%></div></a>
                </div>
                <h3 class="author">Posted by: <%= bookmarks[i].userName%></h3>
                </div>
            </div>
            <% } %>
            </div>
        </div>
<%- include('partials/footer') -%>